{
    "name": "bootbookingcamp/backend",
    "description": "BOOTBOOKINGCAMP - Sistema de Reservas para Camping - Backend API",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "BOOTBOOKINGCAMP Team",
            "email": "dev@bootbookingcamp.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "respect/validation": "^2.2",
        "firebase/php-jwt": "^6.8",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.22",
        "guzzlehttp/guzzle": "^7.8",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "BootBookingCamp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BootBookingCamp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=unit",
        "test-integration": "phpunit --testsuite=integration",
        "test-coverage": "phpunit --coverage-html coverage --coverage-text",
        "test-coverage-xml": "phpunit --coverage-clover coverage.xml",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12",
        "php-cs-fixer": "php-cs-fixer fix",
        "quality": [
            "@cs-check",
            "@phpstan"
        ],
        "check": [
            "@quality",
            "@test"
        ],
        "ci": [
            "@quality",
            "@test-coverage-xml"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}