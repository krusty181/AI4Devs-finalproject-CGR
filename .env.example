# BOOTBOOKINGCAMP - Environment Configuration

# ===========================================
# DEVELOPMENT MODE CONFIGURATION
# ===========================================

# Data Source Mode
# Options: mock | database
DATA_SOURCE_MODE=mock

# Mock Data Configuration
MOCK_DATA_PATH=./data/mock
MOCK_ENABLE_DELAYS=true
MOCK_DELAY_MIN_MS=100
MOCK_DELAY_MAX_MS=800
MOCK_ERROR_RATE=0.05
MOCK_CACHE_SIMULATION=true

# ===========================================
# API CONFIGURATION
# ===========================================

# Server Configuration
API_BASE_URL=http://localhost:8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_CONTACT_FORMS_PER_HOUR=5

# ===========================================
# LOGGING CONFIGURATION  
# ===========================================

LOG_LEVEL=debug
LOG_CHANNEL=daily
LOG_PATH=./logs

